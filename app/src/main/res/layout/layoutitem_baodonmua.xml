<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <ListView
        android:id="@+id/idItemListView"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ngày mua:"
                    android:textSize="13dp"
                    android:textColor="#747474"
                    android:textStyle="bold"
                    android:fontFamily="@font/noto_sans"/>

                <TextView
                    android:id="@+id/tvItemBuyDate"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1/12/2022"
                    android:textSize="13dp"
                    android:textColor="#747474"
                    android:textStyle="bold"
                    android:fontFamily="@font/noto_sans"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán:"
                    android:textSize="15dp"
                    android:textColor="#505050"
                    android:textStyle="bold"
                    android:fontFamily="@font/noto_sans"/>

                <TextView
                    android:id="@+id/tvItemTotal"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="349.000 đ"
                    android:textSize="15dp"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:fontFamily="@font/noto_sans"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/idItemButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/background_donmua"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Chờ xác nhận"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>