<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="101dp"
    android:layout_height="185dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/boder_itemdanhmuc"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="145.85dp"
            app:cardCornerRadius="21.34dp">

            <ImageView
                android:id="@+id/item_Img"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bomber"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvSpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Tên danh mục"
            android:textSize="10dp"
            android:textColor="#1E355C"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_marginRight="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/underline"
                android:textSize="15dp"
                android:textColor="#FF0000"/>
            <TextView
                android:id="@+id/tvSpPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#E83D0A"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5B000000" />

</androidx.cardview.widget.CardView>
